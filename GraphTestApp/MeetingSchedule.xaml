    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="ScheduleText" HorizontalAlignment="Left" Margin="39,104,0,0" Text="Schedule meeting with - " TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="162" RenderTransformOrigin="-0.056,0.243"/>
