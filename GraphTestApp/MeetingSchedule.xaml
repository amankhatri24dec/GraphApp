        <Button x:Name="ScheduleMeetingButton" Content="Send Calendar Invite" Click="CalendarInviteButton_Click" HorizontalAlignment="Left" Margin="77,162,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.003,0.348"/>

        <TextBlock x:Name="BigTextArea" HorizontalAlignment="Left" IsTextSelectionEnabled="True" Margin="49,236,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="153" Width="590" RenderTransformOrigin="-0.056,0.243"/>

    </Grid>

</Page>
